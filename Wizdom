<body>
  <h1>üéôÔ∏è WizMode: Lyrical Alchemist</h1>
  <p>What's on your heart?</p>
  <textarea id="input" rows="4" placeholder="Type your feeling here..."></textarea>
  <button onclick="generateLyrics()">‚ú® Generate Lyrics</button>

  <div id="output" class="output"></div>

  <script>
    function generateLyrics() {
      const input = document.getElementById('input').value.trim();
      const outputDiv = document.getElementById('output');
      
      if (!input) {
        outputDiv.innerText = "Please type something first.";
        return;
      }

      // Example lyric options
      const lines = [
        "They didn‚Äôt see me breaking down, but heaven held the line.",
        "Covered by grace while I walk through the fire.",
        "My silence is a sword, but His Word is louder.",
        "God caught every tear they missed in the crowd.",
        "He fights for me when my faith is fading out.",
        "Even in the dark, I'm never out of His reach."
      ];

      const random = lines[Math.floor(Math.random() * lines.length)];
      outputDiv.innerText = `${input}\n\nüéµ Lyric:\n${random}`;
    }
  </script>
